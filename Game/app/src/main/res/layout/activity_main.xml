<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/nenmhhh"
    tools:context=".activity.MainActivity"
    android:weightSum="10"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9.4"
        android:weightSum="6.5"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="3"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@mipmap/avatarnaruto"
                    android:background="@mipmap/khungavatar"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:background="@drawable/vienmo1"
                    android:layout_marginBottom="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        />
                    <TextView
                        android:id="@+id/nameingame"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="phamtruong2k1"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                    <TextView
                        android:id="@+id/id_user"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="id:02"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                    <TextView
                        android:id="@+id/rank_user"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="rank:Chưa xếp hạng"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:weightSum="4"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@mipmap/diamond"
                        />

                    <TextView
                        android:id="@+id/diamond"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="3"
                        android:background="@drawable/vien_kc_vang_exit"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="0" />

                    <Button
                        android:id="@+id/muadiamond"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="+"
                        android:gravity="center"
                        android:background="@drawable/vien_kc_vang_exit"
                        android:textColor="@color/white"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@mipmap/gold"
                        />
                    <TextView
                        android:id="@+id/gold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/vien_kc_vang_exit"
                        android:textColor="@color/white"
                        android:text="0"
                        android:gravity="center"
                        android:layout_marginTop="1dp"
                        />
                    <TextView
                        android:id="@+id/muagold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="+"
                        android:gravity="center"
                        android:background="@drawable/vien_kc_vang_exit"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:weightSum="5"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/thongke"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rank_24"
                    android:background="@drawable/vienmo_chinh"
                    />

                <ImageButton
                    android:id="@+id/shop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/shop"
                    android:background="@drawable/vienmo_chinh"
                    />
                <ImageButton
                    android:id="@+id/friend"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/friend"
                    android:background="@drawable/vienmo_chinh"
                    />
                <ImageButton
                    android:id="@+id/tuido"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/tuido"
                    android:background="@drawable/vienmo_chinh"
                    />
                <ImageButton
                    android:id="@+id/nangcap"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/nangcap"
                    android:background="@drawable/vienmo_chinh"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.2"
                android:weightSum="5"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/dauthuong"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Đấu thường"
                        android:background="@drawable/vienmo_chinh"
                        android:textColor="#fff"
                        />

                    <Button
                        android:id="@+id/dauhang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Đấu hạng"
                        android:background="@drawable/vienmo_chinh"
                        android:textColor="#fff"
                        />
                    <Button
                        android:id="@+id/dautuychon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Đấu tuỳ chọn"
                        android:background="@drawable/vienmo_chinh"
                        android:textColor="#fff"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:weightSum="11"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/user"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/tinhan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/mail"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/diemdanh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/diemdanh"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/thongbao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/thongbao"
            android:background="@drawable/vienmo_chinh"
            />

        <ImageButton
            android:id="@+id/tangam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/volume_up"
            android:background="@drawable/vienmo_chinh"/>

        <ImageButton
            android:id="@+id/giamam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/volume_down"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/nhacnen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_music_note_24"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/gifcode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_card_giftcard_24"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/huongdan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/help"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/caidat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_menu_24"
            android:background="@drawable/vienmo_chinh"
            />
        <ImageButton
            android:id="@+id/thoat_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/exit"
            android:background="@drawable/vienmo_chinh"
            />
    </LinearLayout>
</LinearLayout>